age_of_jao=23
name_of_jao='daniel'
for i in range(3):
    age=int(input("your age:"))
    name=input('you are name:')
    if age==age_of_jao and name==name_of_jao:
        print("你输入了正确的用户名和密码！")
        break
    elif age!=age_of_jao and name==name_of_jao:
        print("你输入了错误的密码，输入了正确的用户名！")
    elif age==age_of_jao and name!=name_of_jao:
        print("你输入了正确的密码，输入了错误的用户名！")
    else:
        print("你输入了错误的用户名和密码")

    









